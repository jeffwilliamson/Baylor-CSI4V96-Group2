<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/journal"
    tools:context=".Notes" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="469dp"
        android:layout_height="530dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="159dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/notepad_default"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />
    
    <Button
        android:id="@+id/button6"
        android:layout_width="169dp"
        android:layout_height="117dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="718dp"
        android:onClick="launchHome" 
        android:background="@android:color/transparent"/>

	<Button
        android:id="@+id/button5"
        android:layout_width="169dp"
        android:layout_height="117dp"
        android:layout_marginLeft="217dp"
        android:layout_marginTop="718dp"
        android:onClick="launchSettings" 
        android:background="@android:color/transparent"/>
	
	<Button
        android:layout_width="169dp"
        android:layout_height="117dp"
        android:layout_marginLeft="395dp"
        android:layout_marginTop="718dp"
        android:onClick="launchHelp" 
        android:background="@android:color/transparent"/>

</RelativeLayout>