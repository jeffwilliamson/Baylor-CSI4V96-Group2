<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lerpz1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.lerpz1.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.lerpz1.Notes"
            android:label="@string/title_activity_notes"
            android:parentActivityName="com.example.lerpz1.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lerpz1.MainActivity" />
        </activity>
        <activity
            android:name="com.example.lerpz1.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.example.lerpz1.SettingsPage"
            android:label="@string/title_activity_settings_page"
            android:parentActivityName="com.example.lerpz1.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lerpz1.MainActivity" />
        </activity>
        <activity
            android:name="com.example.lerpz1.Map"
            android:label="@string/title_activity_map" >
        </activity>
        <activity
            android:name="com.example.lerpz1.InformationLinks"
            android:label="@string/title_activity_information_links" >
        </activity>
        <activity
            android:name="com.example.lerpz1.Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="com.example.lerpz1.TextReader"
            android:label="@string/title_activity_text_reader" >
        </activity>
    </application>

</manifest>